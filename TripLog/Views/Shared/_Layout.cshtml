<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-secondary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TripLog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Trip" asp-action="Index">View Page</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Destination" asp-action="Manage">Manage Destinations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Accommodation" asp-action="Manage">Manage Accommodations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Activity" asp-action="Manage">Manage Activities</a>
                        </li>
                    </ul>
                </div>


            </div>
        </nav>

        <div class ="bg-secondary text-center text-white p-3 mb-2">
            <h1>My Trip Log</h1>
        </div>
     @*    <header class="bg-secondary text-center text-white p-3 mb-2">
            <h1>My Trip Log</h1> *@

        </header>

        <main role="main">
            @* display temporary message if there is one *@
            @if (TempData.Keys.Contains("message"))
            {
                <h2 class="bg-light text-center p-2 mb-1">@TempData["message"]</h2>
            }

            @* display sub header if there is one *@
            @if (ViewData.Keys.Contains("SubHeader"))
            {
                <h2 class="mt-2 mb-2">@ViewBag.SubHeader</h2>
            }

            @RenderBody()
        </main>
    </div>

</body>
</html>
