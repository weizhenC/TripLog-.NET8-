@model TripLog.Models.ManageActivitiesViewModel

<h2>Add Activity</h2>

<form asp-action="AddActivity">
    <div class="mb-3">
        <label asp-for="NewActivity.Name" class="form-label">Activity Name</label>
        <input asp-for="NewActivity.Name" class="form-control" />
        <span asp-validation-for="NewActivity.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Activity</button>
</form>

<table class="table table-bordered table-striped mt-2">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.Activities)
        {
            <tr>
                <td>@activity.Name</td>
                <td>
                    <form asp-action="DeleteActivity" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@activity.ActivityId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
            </tr>
        }
    </tbody>
</table>